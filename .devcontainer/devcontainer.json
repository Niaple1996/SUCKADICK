{
  "name": "Flutter Web Dev",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/flutter:1": {
      "version": "stable",
      "installAndroid": false
    }
  },
  "customizations": {
    "vscode": { "extensions": ["Dart-Code.dart-code","Dart-Code.flutter"] }
  },
  "postCreateCommand": "flutter --version && flutter config --enable-web && flutter pub get"
}
